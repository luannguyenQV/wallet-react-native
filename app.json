{
  "expo": {
    "name": "Plue Wallet",
    "description": "A multi-currency wallet built on the Rehive platform.",
    "version": "1.4.13",
    "slug": "plue-wallet",
    "privacy": "public",
    "sdkVersion": "30.0.0",
    "orientation": "portrait",
    "primaryColor": "#4d4d4d",
    "icon": "./assets/icons/icon.png",
    "splash": {
      "image": "./assets/icons/splash.png",
      "primaryColor": "#ffffff",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": ["./assets/icons/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.plue.wallet",
      "icon": "./assets/icons/app.png",
      "infoPlist": {
        "NSContactsUsageDescription":
          "Allow access if you would like to easily add recipients from your device",
        "NSCameraUsageDescription":
          "Allow access to upload an image using your device camera",
        "NSPhotoLibraryUsageDescription":
          "Allow access to upload an image from your device storage"
      }
    },
    "android": {
      "package": "com.plue_wallet",
      "icon": "./assets/icons/icon.png",
      "versionCode": 4,
      "splash": {
        "backgroundColor": "#ffffff",
        "resizeMode": "contain",
        "ldpi": "./assets/icons/splash.png",
        "mdpi": "./assets/icons/splash.png",
        "hdpi": "./assets/icons/splash.png",
        "xhdpi": "./assets/icons/splash.png",
        "xxhdpi": "./assets/icons/splash.png",
        "xxxhdpi": "./assets/icons/splash.png"
      }
    }
  }
}
